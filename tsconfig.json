{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext", // Override in tsconfig.cjs.json
    "esModuleInterop": false, // Override in tsconfig.cjs.json
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "strict": true,
    "experimentalDecorators": false,
    "emitDecoratorMetadata": false,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist/es6", // Override in tsconfig.cjs.json
    "declaration": true, // Override in tsconfig.cjs.json
    "declarationDir": "types", // Override in tsconfig.cjs.json
    "lib": [ "DOM", "ESNext" ]
  },
  "include": [
    "src/**/*"
  ],
  "compileOnSave": true
}
